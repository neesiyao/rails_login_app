<% provide(:title, 'Update quiz') %>

<h1>
  Update quiz
</h1>

<p>
  <%= link_to 'Back', @quiz %>
</p>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@quiz) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :description %>
      <%= f.text_field :description, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
