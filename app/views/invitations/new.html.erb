<% provide(:title, 'New invitation') %>

<h1>
  New invitation
</h1>

<p>
  <%= link_to 'Back', tests_path %>
</p>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for([@test, @invitation]) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>

      <%= f.submit "Invite", class: "btn btn-primary" %>

    <% end %>
  </div>
</div>
